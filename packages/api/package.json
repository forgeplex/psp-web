{
  "name": "@psp/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "generate": "openapi-typescript ../../../seafintech/psp/api/openapi/admin/openapi.yaml -o src/generated/admin.ts",
    "generate:watch": "openapi-typescript ../../../seafintech/psp/api/openapi/admin/openapi.yaml -o src/generated/admin.ts --watch"
  },
  "dependencies": {
    "@psp/shared": "workspace:*",
    "@tanstack/react-query": "^5.65.0",
    "axios": "^1.7.0",
    "openapi-fetch": "^0.15.0",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "openapi-typescript": "^7.10.1",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  }
}
