{
  "name": "psp-web",
  "private": true,
  "version": "0.1.0",
  "description": "PSP Web - Payment Service Provider Frontend Monorepo",
  "scripts": {
    "dev": "turbo dev",
    "dev:admin": "turbo dev --filter=@psp/admin",
    "dev:merchant": "turbo dev --filter=@psp/merchant",
    "dev:agent": "turbo dev --filter=@psp/agent",
    "dev:checkout": "turbo dev --filter=@psp/checkout",
    "build": "turbo build",
    "build:admin": "turbo build --filter=@psp/admin",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "turbo": "^2.5.0",
    "prettier": "^3.5.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=20.0.0"
  }
}
